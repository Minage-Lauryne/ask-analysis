# Required for app startup (even if not using comparative analysis)
DJANGO_URL=http://localhost:8000

# For Anthropic API (LLM generation and reranking)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# For Voyage AI (dense embeddings)
VOYAGE_API_KEY=your_voyage_api_key_here

# For Pinecone vector database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_index_name

# Optional: Google API for fallback embeddings
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key

# Optional: Database connections
DB_URL=postgresql://user:password@host:port/dbname
IRS_DB_URL=postgresql://user:password@host:port/irsdb

# Optional: Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_key
